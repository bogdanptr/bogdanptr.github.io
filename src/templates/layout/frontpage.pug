doctype html
html(lang="en")
  head
    include /includes/head.pug
  body
    include /includes/symbols.svg

    header.mainHeader
      .container
        .topBar
          a.mainLogo(href="/" aria-label="Logo")
            svg(width="30" height="30")
              use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href="#logo")
        .topHero.topHero--full
          block header

    div(role="main", id="content", class="mainContent")
      block content
